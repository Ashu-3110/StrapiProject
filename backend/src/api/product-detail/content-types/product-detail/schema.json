{
  "kind": "collectionType",
  "collectionName": "product_details",
  "info": {
    "singularName": "product-detail",
    "pluralName": "product-details",
    "displayName": "Product Detail",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Cost": {
      "type": "decimal"
    },
    "Size": {
      "type": "text"
    },
    "Description": {
      "type": "blocks"
    },
    "Ingredients": {
      "type": "text"
    },
    "Allergens": {
      "type": "string"
    },
    "OtherInfo": {
      "type": "text"
    },
    "Image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_details"
    }
  }
}
